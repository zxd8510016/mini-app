<import src="/template/star/star.wxml"/>
<template name="movie-template">
  <view class="movie-box" bindtap="onMovieTap" data-movieid="{{id}}">
    <image class="movie-img" src="{{image}}"></image>
    <text class="movie-title">{{title}}</text>
    <template is="star-template" data="{{stars,average}}"></template>
  </view>
</template>